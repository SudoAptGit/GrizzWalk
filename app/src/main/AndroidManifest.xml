<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grizzzwalk.mjschmidt.grizzwalk">

    <application
        android:allowBackup="true"
        android:icon="@drawable/scheduling_app_candidate"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Class_Display"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Add_Classes"
            android:label="@string/title_activity_add__classes"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Get_Directions"
            android:label="@string/title_activity_get__directions"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Month_View"
            android:screenOrientation="portrait" />

        <receiver
            android:name="com.grizzzwalk.mjschmidt.grizzwalk.AlarmReciever"
            android:process=":remote" />
    </application>

</manifest>